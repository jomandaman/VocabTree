{
    "version": "2.0.0",
    "tasks": [
       {
          "label": "cmake",
          "type": "shell",
          "command": "cmake",
          "args": [
 
             "-G",
             "\"Unix Makefiles\"",
             "-DCMAKE_BUILD_TYPE=Debug",
             "-DOpenCV_DIR=/usr/local/lib/cmake/opencv4",
             ".."
          ],
          "options": {
             "cwd": "${workspaceRoot}/build"
          },
          "problemMatcher": []
       },
       {
          "label": "make",
          "command": "make",
          "type": "shell",
          "args": [
             "-j8"
          ],
          "options": {
             "cwd": "${workspaceRoot}/build"
          },
 
          "group": {
             "kind": "build",
             "isDefault": true
          },
          "problemMatcher": []
       }
    ]
 }